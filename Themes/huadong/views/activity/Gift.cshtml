    <script src="/Js/Mobile/zepto.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/Js/Mobile/youshang.js" type="text/javascript" charset="utf-8"></script>
    <script>
        function HideMask(_this){
            $(".mask").hide();
        };
        $(".jifenback").on("click",function(){
            $(".mask").show();
        });
			var sort = '@ViewData["sort"]',
							search = '@ViewData["search"]',
							page = '@ViewData["page"]',
							size = '@ViewData["size"]';
				var maxpage = 5;
				function getPay(_this){

				var id =	$($(_this).parents("li")).attr("data-ProductId");
				window.location.href = '/m/product/detail?id='+id;
				};
				$(function(){
					getGoods();
				});
				function getGoods(){
				$.post('/m/activity/gift ',{
									sort:sort,
									search:search,
									page:page,
									size:size
					},
					function(data) {
						var datas = JSON.parse(data);
						var dete = datas.Data;
						console.log(dete);
					if(datas.Code != 0){
						var html ='';
						var img_url = "@(WorkContext.ShopConfig.ImageCDN)";
						var chicun = '?w=200&h=200';
						for(var i = 0; i< dete.length; i++){
							if(dete[i].PicUrl == ""){
								dete[i].PicUrl = '/Images/wutu.png';
								chicun = '';
								img_url='';
							}else{
								 img_url = "@(WorkContext.ShopConfig.ImageCDN)";
								 chicun = '?w=200&h=200';
							};
							if(dete[i].Title == ""){
								dete[i].Title = dete[i].ProductName;
							};
                            function timeJisuan1(times1) {
                                var time1 = times1.split("T")[0] + " " + " " + times1.split("T")[1];
                                var time2 = time1.replace(/\-/g, "/");
                                var time3 = (new Date(time2)).getTime();
                                var tody = (new Date()).getTime();
                                var time4 = time3 - tody;
                                return time4/1000; 
                            };
                            timeJisuan1(dete[i].EndTime);
                            if(timeJisuan1(dete[i].EndTime) < 0){
                                html += '';
                            }else{
                            var time = dete[i].EndTime.split("T")[0];
							html += '<li class="list_item" data-ProductId ="'+dete[i].ProductId+'"><a href="/m/activity/giftDetail?id='+dete[i].GiftId+'" class="go_pay"><div class="list_left"><img src="'+img_url+dete[i].ImgUrl+chicun+'"></div>';
							html += '<div class="list_right"><p class="list_p1">'+dete[i].Title+'</p><p class="list_p2">'+'结束时间:'+time;
							html +='</p><p class="list_p3"><span class="num">'+dete[i].PayScore+'</span>@(WorkContext.SellerInfo.ScoreName)<span class="num_1">';
							html +='<label>'+dete[i].SaleCount+'</label>人兑换</span></p><button class="jili" onclick="getPay(this)">立即兑换</button></div></a></li>';
                            }
						};

						$(".items").append(html);
						page++;

					}else{
						$(".chakan").addClass("disabled");
						$(".chakan").text("已加载全部商品");

						page = maxpage;
					};
				}, 'JSON');
		};
$(window).scroll(
    function() {
        var scrollTop = $(this).scrollTop();
        var scrollHeight = $(document).height();
        var windowHeight = $(this).height();
        if (scrollTop + windowHeight == scrollHeight) {
           if(page<=maxpage) {
           	getGoods();
           	page++;
           	 if(page==maxpage){
			$("#more").html("没有更多数据了");
			return false;
			};
  			} ;
        };
    });
	function gerenShow(){
		$("#sub-title").toggle();
		setTimeout(function(){
			$("#sub-title").hide();
		},3000);
	};


    </script>
