					});
				});
				/* 单独购买 */
				$("body").on("click", "#alone", function() {
	
                        if(weixin){
                            if($("#Uid").val() < 1){
                                window.location.href = '/m/user/Bind';
                             }else{
                                  if(alone) {
									  $("#Quantity").val($(".weui-number-input").val());
									var url = "/m/product/detail?id=";
									window.location.href = url + ProductId;
                                    } else {
