						var Status = 0;
						if($($(this).find('i')).hasClass('not')) {
							$($(this).find('i')).removeClass('not');
							$($(this).find('i')).addClass('yes');
							Status = 0;
						} else {
							$($(this).find('i')).removeClass('yes');
							$($(this).find('i')).addClass('not');
							Status = 1;
						}
						$.ajax({
							type: "post",
							url: "Favorite",
							async: true,
							data: {
								SkuId: SkuId,
								Status: Status
							},
							dataType: "json",
							success: function(rel) {}
