            //  导航滑动
            $(".offset_ul li").click(function () {
                $(".offset_ul li").removeClass('offsetTop');

                if ($(this).index() == 0) {

                     $(window).scrollTop($("#slide1").offset().top);
                }
                if ($(this).index() == 1) {
                     $(window).scrollTop($(".goods_details").offset().top +3 );

