        var Quantity = $("#Quantity").val();
	   var weixin = "@WebHelper.IsWeiXin()";
        console.log(weixin);
           $(function (){
                    if($(".jion_color_ul li").length != 0){
                        $($(".jion_color_ul li")[0]).addClass("crt");
                      SpecProps =   $($(".jion_color_ul li")[0]).attr("data-id");
