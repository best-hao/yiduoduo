        cateSellerlist:[],
        isMore:false,
        isSellerList:false,
        isshowprovince:false,//判断四级联动显示隐藏
        iscate:false,//点击分类
        provinceList:[],
        cityList:[],
        countyList:[],
        iscity:false,
        iscounty:false,
        provinceindex:0,
        clickList:[],//选中的省市区列表
        countyindex:-1,
        catetitle:'',
        previndex:0,//三级联动选中的省市区下标
        isprevindex:0,//上一个下标
        isnextindex:0,//下一个下标
        positiondata:{},
        curcounty:'北京市',
        curProvinceId: 0,
        curCityId:0,
        curCountyId:-1,
        //////////////////列表//////////
        page:1,
        loadingTop:1,
        shopurl:'',
        pagelist:[1],
        regionname:'',
        searchvalue:'',
        longitude:'',
        latitude:'',
        industrytype:0,
        Sort:1,
    },
    methods: {
    	searbtn:function(){    		
    		var _this=this;
    		console.log(_this.searchvalue)
    		if(_this.searchvalue!=''){
    			_this.page=1;
    			_this.sellerList();
    		}	
    	},
    	chosetwoCategory:function(id){//选择二级分类
    		var _this=this;
    		_this.twoCategoryId=id;
    		_this.showcate();
    		_this.page=1;
    		_this.sellerList()
    	},
    	choseCategory:function(id){//点击一级分类触发事件
    		var _this=this;
    		_this.CategoryId=id;
    		_this.industrytype=id;
             if(id==-1){
            	_this.twoCategoryId=-1;
            	_this.curCountyId=-1;
            	_this.searchvalue='';
            	_this.showcate();
            	_this.page=1;
          	    _this.sellerList();
            	_this.twoCategory=[]
            }else{
            	_this.getList()
            }
    	},
    	
    	getList: function () {//获取分类列表
    		var _this = this;
    		 _this.twoCategory=[];
    		 _this.retail=[];
    		$.ajax({
    			type:"get",
    			url:"/Api/Home/IndustryInfo",
    			async:true,
    			success: function(rel){
    				console.log(rel)
    				var data=rel.data;
    				if(rel.code==1){    						
    						for(var i=0;i<data.length;i++){
    			               if(data[i].industrytype==_this.industrytype){
    				               _this.retail.push(data[i])
				    		   }
				    		}
                        _this.twoCategory=_this.retail
    				}
    			}
    		});
		}, 
    	
    
        tab:function(index) {
        	var _this=this;
            _this.num = index;
            if(index==1){
            	if(this.iscate){
